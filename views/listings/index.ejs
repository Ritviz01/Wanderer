            <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1">
                <% for(let listing of allListings){ %>
                    <a href="listings/<%=listing._id%>" class="listing-link">

                        <div class="card cols listing-card">
                            <img src="<%= listing.image?.url || 'https://plus.unsplash.com/premium_photo-1686090449192-4ab1d00cb735?q=80&w=1170&auto=format&fit=crop&ixlib=rb-4.1.0&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D' %>"
                                class="card-img-top" alt="listing_image" style="height: 20rem;">

                            <div class="card-img-overlay"></div>
                            <div class="card-body">
                                <p class="card-text">
                                    <b>
                                        <%= listing.title %> <br>
                                    </b>
                                    â‚¹ <%= listing.price ? listing.price.toLocaleString("en-IN") : "N/A" %> / night
                                </p>
                            </div>
                        </div>
                    </a>

                    <% } %>
            </div>


        </body>